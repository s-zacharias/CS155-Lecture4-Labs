<Window x:Class="Lab1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas Name="speedingTracker" HorizontalAlignment="Left" Height="399" Margin="10,10,0,0" VerticalAlignment="Top" Width="772">
            <Label Content="Speed Limit: " HorizontalAlignment="Left" Margin="173,98,0,0" VerticalAlignment="Top"/>
            <TextBox Name="limit" HorizontalAlignment="Left" Height="23" Margin="256,102,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
            <Label Content="Clocked Speed:" HorizontalAlignment="Left" Margin="160,148,0,0" VerticalAlignment="Top" RenderTransformOrigin="-8.026,-0.962"/>
            <TextBox Name="clocked" HorizontalAlignment="Left" Height="23" Margin="256,152,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
            <Button Content="Check Speed" HorizontalAlignment="Left" Margin="275,216,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
            <Label Name="legality" Content="Legal or Illegal?" Canvas.Left="312" Canvas.Top="50"/>
        </Canvas>
    </Grid>
</Window>
